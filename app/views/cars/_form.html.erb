<%= form_for(@car) do |f| %>
	<%= render "shared/errors" %>

	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title, autofocus: true %>
	</p>

	<p>
		<%= f.label :description %><br/>
		<%= f.text_area :description, cols: 40, rows: 7 %>
	</p>

	<p>
		<%= f.label :features %><br/>
		<%= f.text_field :features %>
	</p>

	<p>
		<%= f.label :daily_rate %><br/>
		<%= f.number_field :daily_rate %>
	</p>

	<p>
		<%= f.label :image_file_name %><br/>
		<%= f.text_field :image_file_name %>
	</p>

	<p>
		<%= f.submit %>
		<%= link_to " Cancel", cars_path %>
	</p>
<% end %>