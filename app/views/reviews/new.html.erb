<header id="content-header">
	<h1>New Review for <%= link_to(@car.title, @car) %></h1>
</header>

<%= form_for([@car, @review]) do |f| %>
	<%= render "shared/errors", object: @review %>	
	<fieldset>
		<ol>
			<li class="required">
				<%= f.label :name %>
				<%= f.text_field :name, size: 40, autofocus: true %>
			</li>

			<li class="required">
				<%= f.label :comment %>
				<%= f.text_area :comment, cols: 80, placeholder: "What did you think of our service?" %>
			</li>
		</ol>

  	<p>
    	<%= f.submit 'Post Review' %>
    	<%= link_to "Cancel", @car, class: 'button' %>
  	</p>
	</fieldset>
<% end %>

