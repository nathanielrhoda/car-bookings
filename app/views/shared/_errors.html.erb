<% if @car.errors.any? %>

<section id="errors">
	<header>
		<h2>
			Oops! The <%= @car.class.name.titleize.downcase %> could not be saved.
		</h2>

		<h3>
			Please correct the following <%= pluralize(@car.errors.count, "errors") %>:
		</h3>
	</header>
	<ul>
		<% @car.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
	</ul>
</section>
<% end %>